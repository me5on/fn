{
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "@sloy/eslint-config-recommended"
  ],
  "globals": {
    "Symbol": false,
    "Promise": false
  },
  "rules": {
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true,
        "allow": [
          "name"
        ]
      }
    ]

  }
}
